<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.admin.mapper.AdminMapper">

    <select id="loginAdmin" parameterType="HashMap" resultType="HashMap">
        SELECT id
             , password
        FROM admin
        WHERE id = #{id}
          and password = #{password}
    </select>


    <select id="selectCntMember" resultType="int">
        SELECT count(*)
        FROM member
    </select>

    <select id="selectAmountPayment" resultType="double">
        SELECT SUM(amount)
        FROM payment;
    </select>


    <select id="selectCntBuy" resultType="int">
        SELECT COUNT(*)
        FROM buy;
    </select>

    <select id="selectCntContact" resultType="int">
        SELECT COUNT(*)
        FROM Contact;
    </select>

    <select id="selectMember" resultType="HashMap">
        SELECT email, name, phone, address, detail, DATE_FORMAT(indate, '%Y-%m-%d %H:%i') indate
        FROM member;
    </select>

    <select id="selectPayment" resultType="HashMap">
        SELECT id, email, amount, uid, DATE_FORMAT(indate, '%Y-%m-%d %H:%i') indate
        FROM payment;
    </select>

</mapper>